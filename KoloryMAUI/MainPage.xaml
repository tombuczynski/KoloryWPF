<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoloryMAUI.MainPage"
             >

    <Grid RowDefinitions="*,Auto,Auto,Auto" ColumnDefinitions="*,48" RowSpacing="20" Padding="15">
        <Rectangle Grid.Row="0" Grid.ColumnSpan="2" x:Name="FilledRectangle" Fill="#9595F1" Stroke="Black"/>
        <Slider x:Name="SliderR" Grid.Row="1" ValueChanged="Slider_ValueChanged" />
        <Label x:Name="LabelValR" Grid.Row="1" Grid.Column="1" 
               VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="0" TextColor="{AppThemeBinding Default=Red, Dark=LightPink}" FontAttributes="Bold" />
        <Slider x:Name="SliderG" Grid.Row="2" ValueChanged="Slider_ValueChanged" />
        <Label x:Name="LabelValG" Grid.Row="2" Grid.Column="1" 
               VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="0" TextColor="{AppThemeBinding Default=Green, Dark=LightGreen}" FontAttributes="Bold" />
        <Slider x:Name="SliderB" Grid.Row="3" ValueChanged="Slider_ValueChanged" />
        <Label x:Name="LabelValB" Grid.Row="3" Grid.Column="1" 
               VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="0" TextColor="{AppThemeBinding Default=Blue, Dark=LightBlue}"  FontAttributes="Bold" />
    </Grid>

</ContentPage>
