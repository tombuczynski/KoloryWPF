<Window x:Name="MainWin" x:Class="KoloryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloryWPF"
        mc:Ignorable="d"
        Title="Kolory WPF" Height="450" Width="504" Closed="MainWin_Closed" Left="100" Top="100">
    <Grid>
        <Rectangle x:Name="FilledRect" Fill="#FF9595F1" Margin="10,10,9.6,90" Stroke="Black"/>
        <Slider x:Name="SliderR" Margin="10,0,9.6,56" VerticalAlignment="Bottom" ValueChanged="ColorSliders_ValueChanged" Minimum="0" Maximum="255" LargeChange="15"/>
        <Slider x:Name="SliderG" Margin="10,0,9.6,33" VerticalAlignment="Bottom" ValueChanged="ColorSliders_ValueChanged" Minimum="0" Maximum="255" LargeChange="15"/>
        <Slider x:Name="SliderB" Margin="10,0,9.6,10" VerticalAlignment="Bottom" ValueChanged="ColorSliders_ValueChanged" Minimum="0" Maximum="255" LargeChange="15"/>

    </Grid>
</Window>
